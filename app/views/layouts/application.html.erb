<!DOCTYPE html>
<html>
  <head>
    <title>FitnessPlanner</title>
    <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link href="http://fonts.googleapis.com/css?family=Satisfy" rel="stylesheet" />

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
  <script src="/assets/javascripts/application.js"></script>
  <!-- Latest compiled JavaScript -->
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>
 <div id="navbar-full">
    <div id="navbar">
        <nav class="navbar-fixed-top navbar-transparent" role="navigation">
 
              <a class="navbar-brand" href="/user" style="font-size: 40px; color:#bdbdbd;">FitnessPlanner</a>
            <!-- Collect the nav links, forms, and other content for toggling -->
              <% if current_user %>
              <ul class="nav navbar-nav navbar-right">
              <li ><a href="/user/show" style="color:#bdbdbd;">Profile<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-user"></span></a></li>
                        <li ><a href="/user/<%=current_user.id%>/calendar" style="color:#bdbdbd;" >Calendar<span style="font-size:16px; color:#bdbdbd;" class="pull-right hidden-xs showopacity glyphicon glyphicon-calendar"></span></a></li>
                        <li ><a href="/user/<%=current_user.id%>/workouts" style="color:#bdbdbd;">Exercises<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-flash"></span></a></li>
                        <li ><a href="/user/<%=current_user.id%>/meals" style="color:#bdbdbd;">Meals<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphiconglyphicon glyphicon-apple"></span></a></li>
                        <li ><a href="/logout" style="color:#bdbdbd;">Log out<span style="font-size:16px;" class="pull-right hidden-xs showopacity glyphicon glyphicon-log-out"></span></a></li>
              </ul>
              <% else %>
              <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" data-toggle="modal" data-target="#registerModal">Register</a></li>
                    <li><a href="#" data-toggle="modal" data-target="#loginModal">Sign in</a></li>
               </ul>
              <% end %>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
        <div class="blurred-container">
            <div class="img-src" ></div>
        </div>
    <container>
<div id="loginModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <center><h4 class="modal-title">Login</h4></center>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_tag url:'/sessions' do |f| %>
        <%= f.text_field :email %>
        <%= f.password_field :password %>
        <%= f.submit "Log In" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
<div id="registerModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <center><h4 class="modal-title">Register</h4></center>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_tag url:'/user' do |f| %>
          <%= f.text_field :name %>
          <%= f.text_field :email %>
          <%= f.password_field :password %>
          <%= f.submit "Sign Up" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
<%= yield %>
</body>
</html>


